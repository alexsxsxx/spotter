{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2021", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      // "@spotter-app/core": ["node_modules/@spotter-app/core/main.js"],
      // "@spotter-app/plugin": ["node_modules/@spotter-app/plugin/main.js"],
    },
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "tmp"]
}
